        {{ include("header.html.twig") }}
        {% if erreur is not empty %}
            <p>{{ erreur }}</p>
        {% else %}

        <main id="page-principaux">

            
            <h1>Nos plats principaux</h1>
            <a href="index.php" id="lien-retour">Retour aux choix de menus</a>

            <ul class="nav-menus">
                <li>
                    <a href="entrees.php">Entr√©es</a>
                    <a href="#" class="menu-actif">Repas principaux</a>
                    <a href="desserts.php">Desserts</a>
                </li>
            </ul>

            <ul>
               {% for principal in principaux %}
                    <li class="nom-item">{{ principal.nom_plat }}</li>
                    <li>
                        <ul class="les-prix">
                            {% for prix in principal.prix %}
                                <li>
                                    <span class="description-prix-item">{{ prix.description }}</span>
                                    <span class="prix-item">{{ prix.prix }} $</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li class="description-item">{{ principal.description_plat }}</li>
                {% endfor %}
            </ul>

            <ul>
            <h2>Salades</h2>
                {% for salade in salades %}
                    <li class="nom-item">{{ salade.nom_plat }}</li>
                    <li>
                        <ul class="les-prix">
                            {% for prix in salade.prix %}
                                <li>
                                    <span class="description-prix-item">{{ prix.description }}</span>
                                    <span class="prix-item">{{ prix.prix }} $</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li class="description-item">{{ salade.description_plat }}</li>
                {% endfor %}
            </ul>


            <h2>Paninis</h2>
            <p class="description-ajouts-possible">*Tous les paninis sont servis avec des frites et/ou salade et sont disponibles en version wrap</p>
            {% for panini in paninis %}
                <p class="nom-item">{{ panini.nom_plat }}</p>
                <p class="description-prix-item">{{ panini.description }}</p>
                <p class="prix-item">{{ panini.prix }} $</p>
                <p class="description-item">{{ panini.description_plat }}</p>
            {% endfor %}
        </main>

        {% endif %}
